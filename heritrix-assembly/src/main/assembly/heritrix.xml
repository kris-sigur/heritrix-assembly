<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>heritrix</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>heritrix-${org.archive.heritrix.version}/lib</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>target/heritrix</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
			<excludes>
				<exclude>heritrix-${org.archive.heritrix.version}/bin/*</exclude>
				<exclude>heritrix-${org.archive.heritrix.version}/lib/log4j-1.2.17.jar</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>target/heritrix/heritrix-${org.archive.heritrix.version}/bin</directory>
			<outputDirectory>/heritrix-${org.archive.heritrix.version}/bin</outputDirectory>
			<excludes>
				<exclude>heritrix</exclude>
			</excludes>
			<fileMode>0755</fileMode>
   			<directoryMode>0755</directoryMode>
   		</fileSet>
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>/heritrix-${org.archive.heritrix.version}/bin</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/jobs</directory>
			<outputDirectory>/heritrix-${org.archive.heritrix.version}/jobs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/keystore</directory>
			<outputDirectory>/heritrix-${org.archive.heritrix.version}/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/classes</directory>
			<outputDirectory>/heritrix-${org.archive.heritrix.version}/scripts/</outputDirectory>
			<fileMode>0755</fileMode>
   			<directoryMode>0755</directoryMode>
		</fileSet>
	</fileSets>
    <files>
        <file>
            <source>target/heritrix/heritrix-${org.archive.heritrix.version}/lib/log4j-1.2.17.jar</source>
            <outputDirectory>/heritrix-${org.archive.heritrix.version}/lib/</outputDirectory>
            <destName>logforjay-1.2.17.jar</destName>
        </file>
    </files>
</assembly>